{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": [
    "src/app.tsx",
    "src/app-entry.tsx",
    "src/dev.tsx",
    "src/steps-chart.tsx",
    "src/activities-chart.tsx",
    "src/sleep-chart.tsx",
    "src/heart-rate-chart.tsx",
    "src/training-chart.tsx",
    "src/race-predictions-chart.tsx",
    "src/splits-chart.tsx",
    "src/stress-chart.tsx",
    "src/hr-zones-chart.tsx",
    "src/lib",
    "src/components"
  ]
}
